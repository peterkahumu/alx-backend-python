pipeline {
    agent any

    tools {
        python 'Python3'
    } 
    
    environment {
        VENV = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set up venv'){
            steps {
                sh 'python3 -m venv venv'
                sh './$VENV/bin/pip install --upgrade pip'
                sh './$VENV/bin/pip install -r messaging_app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh './$VENV/bin/pytest messaging_app/tests --junitxml=report.xml'
            }
        }

        stage('Publish Report'){
            steps {
                junit 'report.xml'
            }
        }
    }

    post {
        always {
            echo 'Pipeline Complete'
        }
    }
}